<Page x:Class="EhnesFinalProject.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EhnesFinalProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="Aqua">
        
        <TextBox x:Name="UsernameInput" HorizontalAlignment="Center" Height="23" Margin="291,123,252,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="257"/>
        <TextBox x:Name="PasswordInput" HorizontalAlignment="Center" Height="23" Margin="291,203,252,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="257"/>
        <Button x:Name="CreateUserButton"  Content="Create User" HorizontalAlignment="Center" Margin="291,274,434,0" VerticalAlignment="Top" Width="75" Click="CreateUserButton_Click"/>
        <Button x:Name="Login" Content="Login" HorizontalAlignment="Center" Margin="473,274,252,0" VerticalAlignment="Top" Width="75" Click="Login_Click"/>
        <Label x:Name="WarningLabel" Content="Label" HorizontalAlignment="Left" Margin="380,164,0,0" VerticalAlignment="Top" Visibility="Hidden" FontSize="18"/>

    </Grid>
</Page>
