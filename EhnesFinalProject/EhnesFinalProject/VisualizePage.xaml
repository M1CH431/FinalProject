<Page x:Class="EhnesFinalProject.VisualizePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EhnesFinalProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VisualizePage">

    <Grid Background="Black">

        <Button x:Name="BackButton" Content="Back" HorizontalAlignment="Center" Margin="34,420,691,10" VerticalAlignment="Center" Width="75" Click="BackButton_Click"/>
        <Button x:Name="PlayPauseButton" Content="Play" HorizontalAlignment="Center" Margin="686,420,39,10" VerticalAlignment="Center" Width="75" RenderTransformOrigin="-0.304,0.773" Click="PlayPauseButton_Click"/>
        <Canvas x:Name="VisualizationZone" HorizontalAlignment="Center" Height="400" Margin="347,0,353,0" VerticalAlignment="Top" Width="400"/>
        <Slider x:Name="Volume" HorizontalAlignment="Center" Margin="308,422,301,10" VerticalAlignment="Center" Width="191" ValueChanged="Volume_ValueChanged"/>

    </Grid>
</Page>
